void screen_default() {
		show_battery(getBatteryvalue());
		show_bt(ble_connect);
}

struct tm *timeinfo;
time_t date_hour_seconds;
int screen_view(int count) {
		NRF_LOG_INFO("screen_view count = %d, hr(%d), sp(%d),fat(%d),stress(%d)", count, hartrate, spo2, fat, stress);
		NRF_LOG_FLUSH();
	
  	switch (count) {
				case 0:
					date_hour_seconds = gettime();
					timeinfo = localtime(&date_hour_seconds);
			
					screen_default();
					s_battery(100);
					show_time(timeinfo->tm_mon+1, timeinfo->tm_mday, timeinfo->tm_hour, timeinfo->tm_min, timeinfo->tm_wday);
		    	return 1;
    		case 1:
					screen_default();
				  if ( hartrate > 0 ) {
						show_heartrate(hartrate);
					} else {
						show_stepcount(stepcount);
					}
					return 2;
    		case 2:
					screen_default();
					if ( spo2 > 0 ) {
						 show_spo2(spo2);
							return 3;
					} else {
							show_stepcal(stepcount);
							return 0;
					}
    		case 3:
							if ( kcal > 0 ) {
								show_stress(stress);
							} else {
								return -1;
							}
    			  return 4;
		    case 4:
							if ( bodyfat > 0 ) {
								show_bodyfat_weight(fat, weight);
							} else {
								return -1;
							}
    			return 5;
		    case 5:
							if ( bodyfat > 0 ) {
								show_bodyfat(fat);
							} else {
								return -1;
							}
    			return 6;
		    case 6:
							if ( bmi > 0 ) {
								show_bmi(bmi);
							} else {
								return -1;
							}
    			return 7;
		    case 7:
					show_stepcount(stepcount);
    			return 8;
		    case 8:
					show_stepcal(stepcount);
			    return 0;
		    case 9:
			    return -1;
		    default:
			    return -2;
	}
}

void screen_print(void) {
	int flag = -1;
	while ( flag == -1 ) {
		flag = screen_view(screen_flag++);
		if ( flag == -1 ) screen_flag = 0;
	}
}


void check_function(void) {
	      check_flag = true;
  			uint32_t err_code;
  			uint8_t data[1];
  			char afe4300_data[16];

      	show_check_ready(3);
				nrf_delay_ms(1000);
      	show_check_ready_count(2);
				nrf_delay_ms(1000);
      	show_check_ready_count(1);
				nrf_delay_ms(1000);

      	show_check(0);

				fstorage_read();	

      	show_check_progress(1);
	
				height = atoi(strs[3]);
				weight = atoi(strs[4]);
				age = atoi(strs[1]);
				gender = atoi(strs[2]);
	
				int afe4300_result = afe4300_check(atoi(strs[3]), atoi(strs[4]), atoi(strs[1]), atoi(strs[2]), &totalbodywater, &extracellwater, &ffm, &bodyfat);
					//readRegister(ADC_DATA_RESULT);

      	show_check_progress(2);

				char s1[4];
				sprintf(s1,"%.0f", totalbodywater);
				char s2[4];
				sprintf(s2,"%.0f", extracellwater);
				char s3[4];
				sprintf(s3,"%.0f", ffm);
				char s4[4];
				sprintf(s4,"%.0f", bodyfat);
				
				fat = atoi(s4);

 				sprintf(afe4300_data, "%s|%s|%s|%s", s1, s2, s3, s4);
				NRF_LOG_INFO("afe4300_data = %s", afe4300_data);
				NRF_LOG_INFO("afe4300_result : %d", afe4300_result);

      	show_check_progress(4);
				
				uint32_t result = ppg_init(&hartrate, &spo2);


				if ( result == 1 ) {
  				NRF_LOG_INFO("ppg_init is true");

					if ( height != 0 && weight != 0 ) {
						bmi = weight / ( (height*0.01 ) * (height*0.01 ) );
						if ( gender == 0 ) {
							kcal = 66.47 + (13.75 * weight) + (5 * height) - (6.76 * age);
						} else {
							kcal = 66.47 + (13.75 * weight) + (5 * height) - (6.76 * age);
						}
					}

					
				  if ( hartrate != 0 ) {
  				  hartrate = hartrate - 20;
	  			  if ( hartrate < 50 ) hartrate = hartrate + 10;
				  }

  				sprintf(data, "%d|%d|%d|%d|%s", hartrate, spo2, bmi, kcal, afe4300_data);
					
				} else {
  				NRF_LOG_INFO("ppg_init is error");
					hartrate = 0, spo2 = 0, fat = 0, stress = 0, bmi = 0, kcal = 0;
					

  				sprintf(data, "00|00|00|00|%s", afe4300_data);
				}
				
			NRF_LOG_FLUSH();
			uint16_t len = strlen(data);


			NRF_LOG_INFO("len = %i", len);
			NRF_LOG_INFO("Send button state change data = %s", data);
			NRF_LOG_FLUSH();

				
		if ( ble_connect == 0 ) {
		
		}	else	{
				err_code = ble_nus_string_send(&m_nus, data, &len);
				APP_ERROR_CHECK(err_code);
		}


		screen_flag = 1;
		if ( result == 1 ) {
			screen_print();
		} else {
			show_check_fail();
		}

		check_flag = false;
}


