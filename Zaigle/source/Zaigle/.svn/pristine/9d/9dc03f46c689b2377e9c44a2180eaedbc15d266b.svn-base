/**@brief Function for handling events from the BSP module.
 *
 * @param[in]   event   Event generated by button press.
 */
uint8_t bt_flag = 0;
void bsp_event_handler(bsp_event_t event)
{
						NRF_LOG_INFO("bsp_event_handler  event = %d", event);
						NRF_LOG_FLUSH();
	
    uint32_t err_code;
    switch (event)
    {
        case BSP_EVENT_KEY_0:	//	screen on/off
							NRF_LOG_INFO("BSP_EVENT_KEY_0");
							NRF_LOG_FLUSH();

							if ( !check_flag ) {
									if ( screen_view_flag == 0 ) {
										nrf_gpio_cfg_output(OLED_PW);
										nrf_gpio_pin_write(OLED_PW, LOW);
										nrf_delay_ms(100);
										screen_view_flag = 1;
									} else {
										nrf_gpio_cfg_output(OLED_PW);
										nrf_gpio_pin_write(OLED_PW, HIGH);
										nrf_delay_ms(100);
										screen_view_flag = 0;
									}
							}
              break;
        case BSP_EVENT_KEY_1:	//	check sensor
						  NRF_LOG_INFO("BSP_EVENT_KEY_1 ");
							NRF_LOG_FLUSH();		

							nowtime();
							screen_print();
							break;

        case BSP_EVENT_KEY_2:	// scroll
						  NRF_LOG_INFO("BSP_EVENT_KEY_2 screen_view_flag = %d, %d", screen_view_flag, check_flag);
							NRF_LOG_FLUSH();		

				      if ( screen_view_flag == 1 ) {
									nrf_gpio_cfg_output(OLED_PW);
									nrf_gpio_pin_write(OLED_PW, HIGH);
									nrf_delay_ms(100);
									screen_view_flag = 0;
							}
							if ( check_flag ) {
							} else {
								check_function();
							}
           break;

        case BSP_EVENT_KEY_7:	// power off
						  NRF_LOG_INFO("BSP_EVENT_KEY_7");
							NRF_LOG_FLUSH();		

							nrf_gpio_pin_write(SW_PWR_HOLD, LOW);
							nrf_gpio_cfg_output(OLED_PW);
							nrf_gpio_pin_write(OLED_PW, LOW);
						break;

        default:
            break;
    }
}



