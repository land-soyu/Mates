<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#66c9eb">

        <ImageView
            android:id="@+id/icon_menu_view"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:padding="14dp"
            android:src="@drawable/ic_action_back"
            android:layout_weight="0.05"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1"
            android:layout_weight="0.9"
            >

            <TextView
                android:id="@+id/text_app_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="나의 생활 이력 입력"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:gravity="center"

                />
        </LinearLayout>

        <ImageView
            android:id="@+id/icon_history"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:padding="13dp"
            android:layout_weight="0.05"
            android:visibility="invisible"
            android:src="@drawable/home"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@drawable/border">

        <LinearLayout
            android:id="@+id/no_data_info"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:gravity="center"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:text="정보가 없습니다."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:text="내 정보 등록"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/data_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:id="@+id/life_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="홍길통"
                />
            <TextView
                android:id="@+id/life_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/life_age__tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="age"
                />
            <TextView
                android:id="@+id/life_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"

                />
            <TextView
                android:id="@+id/life_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/life_height2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cm"
                android:textColor="#000000"

                />
            <TextView
                android:id="@+id/life_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/life_weight2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kg"
                android:textColor="#000000"
                />


        </LinearLayout>



    </LinearLayout>

</LinearLayout>