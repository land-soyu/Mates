<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="10">


    <include
        android:id="@+id/top"
        layout="@layout/main_top_red_view"
        android:layout_height="100dp"
        android:layout_width="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/border"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:text="@string/name"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                />

            <LinearLayout
                android:gravity="center|right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/pro_name"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_name"
                    android:textColorHint="@color/hint_color"
                    android:background="@null"
                    android:textColor="#000000"
                    />

                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:background="@drawable/border">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:text="@string/gender"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                />
            <LinearLayout
                android:gravity="center|right"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/sex_man"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="7dp"
                    android:layout_gravity="center"
                    android:src="@drawable/btn_contents_checkbox_normal"
                    android:onClick="onSexManClieckd"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/man"
                    android:textColor="#000000"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:id="@+id/sex_woman"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="7dp"
                    android:layout_gravity="center"
                    android:src="@drawable/btn_contents_checkbox_normal"
                    android:onClick="onSexWomanClieckd"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/woman"
                    android:textColor="#000000"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    />
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/border"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="@string/birth_data"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"

                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:layout_marginRight="20dp"
                    >
                      <EditText
                          android:id="@+id/pro_year"
                          android:layout_width="wrap_content"
                          android:hint="@string/input_birth"
                          android:layout_height="wrap_content"
                          android:maxLength="4"
                          android:textColorHint="@color/hint_color"
                          android:inputType="number"
                          android:textColor="#000000"
                          android:background="@null"
                          android:gravity="center"
                          android:layout_marginRight="10dp"
                          />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:text="@string/year"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textStyle="bold"
                            />
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/border"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginRight="35dp"
                android:text="@string/height"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                />

            <LinearLayout
                android:gravity="center|right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/pro_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="3"
                    android:hint="@string/input_height"
                    android:textColorHint="@color/hint_color"
                    android:background="@null"
                    android:textColor="#000000"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginRight="20dp"
                    android:text="@string/cm"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    />
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/border"
            >
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:text="@string/weight"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                />

            <LinearLayout
                android:gravity="center|right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/pro_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/hint_color"
                    android:maxLength="3"
                    android:background="@null"
                    android:hint="@string/input_weight"
                    android:textColor="#000000"
                    android:inputType="number"
                    android:gravity="center"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:textColor="#000000"
                    android:text="@string/kg"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="완료"
            android:visibility="gone"/>




    </LinearLayout>


</LinearLayout>