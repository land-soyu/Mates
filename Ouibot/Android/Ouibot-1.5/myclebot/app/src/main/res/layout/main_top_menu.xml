<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_top_menu"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:weightSum="4">

    <LinearLayout
        android:id="@+id/top_menu_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@color/top_menu_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/top_menu_contact_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_tap_contact_selected" />

            <TextView
                android:id="@+id/top_menu_contact_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/contact_information"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/top_menu_text_color_activity"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_menu_contact_line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_text_color_activity"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_menu_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@color/top_menu_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/top_menu_history_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_tap_recent_normal" />

            <TextView
                android:id="@+id/top_menu_history_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/recent_call"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/top_menu_text_color"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_menu_history_line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_menu_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@color/top_menu_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/top_menu_message_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_tap_message_normal" />

            <TextView
                android:id="@+id/top_menu_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/message"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/top_menu_text_color"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_menu_message_line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_menu_link"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@color/top_menu_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/top_menu_link_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_tap_connection_normal" />

            <TextView
                android:id="@+id/top_menu_link_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/connection_setting"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/top_menu_text_color"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_menu_link_line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

</LinearLayout>