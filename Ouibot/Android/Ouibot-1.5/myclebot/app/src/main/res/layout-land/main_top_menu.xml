<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:weightSum="4"
    android:id="@+id/main_top_menu"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/top_menu_contact"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="1dp"
        android:weightSum="12"
        >
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/top_menu_contact_icon"
                android:layout_gravity="center"
                android:src="@drawable/ic_tap_contact_selected"
                android:layout_marginRight="6dp"
                android:layout_width="27dp"
                android:layout_height="27dp" />
            <TextView
                android:id="@+id/top_menu_contact_text"
                android:layout_gravity="center"
                android:textColor="@color/top_menu_text_color_activity"
                android:text="@string/contact_information"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/top_menu_contact_line"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/top_menu_text_color_activity"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_menu_history"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="1dp"
        android:weightSum="12"
        >
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/top_menu_history_icon"
                android:layout_gravity="center"
                android:src="@drawable/ic_tap_recent_normal"
                android:layout_marginRight="6dp"
                android:layout_width="27dp"
                android:layout_height="27dp" />
            <TextView
                android:id="@+id/top_menu_history_text"
                android:layout_gravity="center"
                android:textColor="@color/top_menu_text_color"
                android:text="@string/recent_call"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/top_menu_history_line"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_menu_message"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="1dp"
        android:weightSum="12"
        >
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/top_menu_message_icon"
                android:layout_gravity="center"
                android:src="@drawable/ic_tap_message_normal"
                android:layout_marginRight="6dp"
                android:layout_width="27dp"
                android:layout_height="27dp" />
            <TextView
                android:id="@+id/top_menu_message_text"
                android:layout_gravity="center"
                android:textColor="@color/top_menu_text_color"
                android:text="@string/message"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/top_menu_message_line"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_menu_link"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12"
        >
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/top_menu_link_icon"
                android:layout_gravity="center"
                android:src="@drawable/ic_tap_connection_normal"
                android:layout_marginRight="6dp"
                android:layout_width="27dp"
                android:layout_height="27dp" />
            <TextView
                android:id="@+id/top_menu_link_text"
                android:layout_gravity="center"
                android:textColor="@color/top_menu_text_color"
                android:text="@string/connection_setting"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/top_menu_link_line"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>

</LinearLayout>