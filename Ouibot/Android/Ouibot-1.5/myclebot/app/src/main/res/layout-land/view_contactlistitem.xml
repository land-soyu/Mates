<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_contents"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            >
            <ImageView
                android:id="@+id/content_profile_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/img_contents_person_nopicture"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/img_contents_profile_no_bg"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4dc1d2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Date" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/btn_contents_menu" />

            <TextView
                android:id="@+id/contact_modify"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/mCCTV_bg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_contents_short_normal"
                android:gravity="center">

                <TextView
                    android:id="@+id/mCCTV"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_contents_ouibot" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mPET_bg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_contents_short_normal"
                android:gravity="center">

                <TextView
                    android:id="@+id/mPET"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_contents_pet" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mMessage_bg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_contents_short_normal"
                android:gravity="center">

                <TextView
                    android:id="@+id/mMessage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_contents_message" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mCALL_bg"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_contents_blue_normal"
                android:gravity="center">

                <TextView
                    android:id="@+id/mCALL"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_contents_phone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/margin_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#00000000"
        android:orientation="vertical" />
</LinearLayout>