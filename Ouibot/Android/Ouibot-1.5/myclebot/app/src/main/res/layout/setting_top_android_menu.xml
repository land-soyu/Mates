<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_top_menu"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:weightSum="4">

    <LinearLayout
        android:id="@+id/setting_menu_spem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@color/top_menu_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/setting_menu_spem_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/spam_control"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/top_menu_text_color_activity"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_menu_spem_line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_text_color_activity"
            android:orientation="horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_menu_notice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@color/top_menu_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/setting_menu_notice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/notice"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/top_menu_text_color"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_menu_notice_line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_menu_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@color/top_menu_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/setting_menu_center_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/customer_service"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/top_menu_text_color"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_menu_center_line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_menu_version"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@color/top_menu_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/setting_menu_version_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/version_info"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/top_menu_text_color"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_menu_version_line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="2"
            android:background="@color/top_menu_bg"
            android:orientation="horizontal"/>
    </LinearLayout>

</LinearLayout>