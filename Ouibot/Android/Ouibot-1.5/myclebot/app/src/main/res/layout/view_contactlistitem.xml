<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_contents"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="20dp"
                >
                <ImageView
                    android:id="@+id/content_profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/img_contents_person_nopicture"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/img_contents_profile_no_bg"
                    />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Text"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#4dc1d2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Date" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="25dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:src="@drawable/btn_contents_menu" />

                <TextView
                    android:id="@+id/contact_modify"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D5D5D5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/mCCTV_bg"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_contents_short_normal"
                android:gravity="center">

                <TextView
                    android:id="@+id/mCCTV"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_contents_ouibot" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mPET_bg"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_contents_short_normal"
                android:gravity="center">

                <TextView
                    android:id="@+id/mPET"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_contents_pet" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mMessage_bg"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_contents_short_normal"
                android:gravity="center">

                <TextView
                    android:id="@+id/mMessage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_contents_message" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mCALL_bg"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_contents_blue_normal"
                android:gravity="center">

                <TextView
                    android:id="@+id/mCALL"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_contents_phone"
                    android:fadingEdgeLength="0px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/margin_layout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#00000000"
        android:orientation="vertical" />
</LinearLayout>